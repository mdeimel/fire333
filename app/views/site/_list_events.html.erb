<div class="post">
  <span class="event_type"><%= event_type %></span>
  <div class="line_break"></div>
  <div class="event_content">
  <% if !events.nil? && !events.empty? %>
    <% for event in events %>
      <span class="event_title"><%= event.title %></span><br>
      <%= event.start.strftime("%B %d, %Y (%A)") %><br>
      <span class="event_description"><%= event.description %></span><br>
      <span class="event_lighter">Location: </span><%= event.location %><br>
      <span class="event_lighter">Time: </span><%= event.start.strftime("%l:%M %P") %> - <%= event.end.strftime("%l:%M %P") %><br><br>
    <% end %>
  <% else %>
    No <%= event_type %>
  <% end %>
  </div>
</div>
