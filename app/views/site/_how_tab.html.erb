<%= render :partial => 'list_events', :locals => { :event_type => "Upcoming Events", :events => @upcoming_events } %>
<%= render :partial => 'list_events', :locals => { :event_type => "Recent Events", :events => @recent_events } %>

<% if !session[:login_name].nil? %>
  <br><br>
  <% form_tag new_event_path, :method => "post", :id => "new_event" do %>
    <fieldset>
      <legend>New Event</legend>
      Title:
      <%= text_field_tag :title, nil, :size=>55 %>
      Description:
      <%= text_field_tag :description, nil, :size=>55 %>
      Location:
      <%= text_field_tag :location, nil, :size=>55 %>
      Date:<br>
      <%= text_field_tag :date, nil, :size=>12, :class=>"datepicker" %><br>
      Start Time:<br>
      <%= text_field_tag :start, nil, :size=>12 %><br>
      End Time:<br>
      <%= text_field_tag :end, nil, :size=>12 %><br>
      <%= submit_tag "Create" %>
    </fieldset>
  <% end %>
<% end %>
