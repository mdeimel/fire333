<br>
<span class="event_type">Downloadable Content</span>
<div class="line_break"></div>
<br>
<% if !attachments.nil? && !attachments.empty? %>
  <table>
  <% for attachment in attachments %>
    <tr>
      <td rowspan=2><%= render :partial => 'site/filetype', :locals => { :content_type => attachment.content_type, :attachment_id => attachment.id } %></td>
      <td><%= link_to attachment.displayname, show_attachment_path(attachment.id) %>
      <% if !session[:user_id].nil? && session[:user_id]==attachment.user_id %>
        <% form_tag delete_attachment_path(attachment.id), :method => "delete", :class => "delete_button" do %>
          <%= image_submit_tag "/images/icons/delete.png", :confirm => "Are you sure you want to delete this attachment?", :method => "delete" %>
        <% end %>
      <% end %>
      </td>
    </tr>
    <tr>
      <td>&nbsp&nbsp&nbsp&nbsp<i style="font-size:80%" class="event_lighter"><%= attachment.description %></i></td>
    </tr>
  <% end %>
  </table>
<% end %>
