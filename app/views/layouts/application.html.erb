			}
			/*
			Last element in tabs
			<img src="images/logo_small.png" />
			#tabs img {
			  position: relative;
			  left: 12px;
			  top: 2px;
			}
			*/
			.fadein { position:relative; }
      .fadein img { position:absolute; left:0; top:0; }
			#slideshow_footer {
